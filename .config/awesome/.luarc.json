{
    "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
    "description": "Awesomewm",
    "diagnostics": {
        "enable": true,
        "globals": [
            "awesome",
            "client",
            "screen",
            "awful",
            "self",
            "tag",
        ]
    },
    "workspace": {
        "library": [
            "/usr/share/awesome/lib/"
        ],
        "maxPreload": 2000,
        "preloadFileSize": 1000
    },
    "telemetry.enable": false
}
